  "configurations": [
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/back-django/manage.py",
      "args": ["runserver", "8000"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "makemigrations",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/back-django/manage.py",
      "args": ["makemigrations"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "migrate",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/back-django/manage.py",
      "args": ["migrate"],
      "django": true,
      "justMyCode": true
    },
    {
      // 运行python 文件
      "name": "collectstatic",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/back-django/manage.py",
      "args": ["collectstatic"],
      "django": true,
      "justMyCode": true
    },
    {
      "command": "npm run dev",
      "name": "dev",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/web"
    },
    {
      "command": "npm run build",
      "name": "build",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/web"
    },
    {
      // 运行命令行命令. 没有python环境
      "command": "fresh",
      "name": "fresh",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/back-go"
    },
    {
      // 运行python库的命令  scrapy crawl spider
      "name": "spider",
      "type": "python",
      "request": "launch",
      "module": "scrapy",
      "justMyCode": true,
      "args": ["crawl", "spider"],
      "cwd": "${workspaceFolder}/spider"
    },
    {
      "command": "npm run dev:mp-weixin",
      "name": "dev:mp-weixin",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/uni"
    },
    {
      "command": "npm run build:mp-weixin",
      "name": "build:mp-weixin",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/uni"
    }
